{% extends 'base.html.twig' %}

{% block title %}Gestion des sites
{% endblock %}

{% block body %}

	<div class="container-fluid">

		<nav aria-label="breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item active" aria-current="page">
					<a href="{{ path('AdminDasboard.index') }}">Gestion</a>
				</li>
				<li class="breadcrumb-item active" aria-current="page">Lieux</li>
			</ol>
		</nav>

		<h1 class="h1 my-3">Gestions des sites</h1>
		<a href="{{ path('AdminLieu.add') }}" class="btn btn-success my-5">
			<i class="fas fa-plus-circle"></i>
		</a>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>Libell√©</th>
					<th class="text-center">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for lieu in paginator.data %}

					<tr>
						<td>{{ lieu.idLieu }}</td>
						<td>{{ lieu.libelleLieu }}</td>
						<td class="text-center">
							<a href="{{ path('AdminLieu.edit', {'id' : lieu.idLieu}) }}" class="btn btn-primary mr-2">
								<i class="fas fa-edit"></i>
							</a>
							<a href="{{ path('AdminLieu.delete', {'id' : lieu.idLieu}) }}" class="btn btn-danger ml-2">
								<i class="fas fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<div class="d-flex justify-content-center">
			{% set page = paginator.currentPage %}
			{% set pages = paginator.pages %}

			<ul class="pagination">
				<li class="page-item {% if page == 1 %} disabled {% endif %}">
					<a class="page-link" href="{{ path('AdminLieu.index', {'page' : page - 1}) }}">&laquo;</a>
				</li>
				{% for i in 1..pages %}

					<li class="page-item {% if page == i %} active {% endif %}">
						<a class="page-link" href="{{ path('AdminLieu.index', {'page' : i}) }}">{{ i }}</a>
					</li>
				{% endfor %}
				<li class="page-item {% if page == pages %} disabled {% endif %}">
					<a class="page-link" href="{{ path('AdminLieu.index', {'page' : page + 1}) }}">&raquo;</a>
				</li>
			</ul>
		</div>
	</div>

{% endblock %}
