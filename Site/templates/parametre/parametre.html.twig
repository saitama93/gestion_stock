        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">Paramètres</li>
            </ol>
        </nav>
        <div class="row" id="sommaire">
            <ul style="list-style: none;margin-left: 0;padding-left: 0;">
                <li>Sommaire</li>
                <li><a href="#Marque">Marque</a></li>
                <li><a href="#Type">Type</a></li>
                <li><a href="#Specificite">Specificite</a></li>
                <li><a href="#Lieu">Lieu</a></li>
                <li><a href="#Statut">Statut</a></li>
            </ul>
        </div>
        <br>
        <h5 id="Marque">Liste des marques</h5>
        <div class="row">
            <a href="{{ path('Parametre.add',{lib:'Marque'}) }}" class="btn btn-primary" id="param_add">
                <ion-icon name="add-outline"></ion-icon>Ajouter Marque</a>
        </div>
        <div class="table-responsive" id="tabParam">
            <table class="table" id="tableMarque">
                <thead class="thead-dark">
                <tr><th>Libellé</th><th id="editdelete"></th></tr>
                </thead>
                <tbody>
                {% for marque in marques %}
                <tr>
                    <td>{{ marque.libelleMarque }}</td>
                    <td>
                        <a href="{{ path('Parametre.edit',{id : marque.idMarque,lib : 'Marque' }) }}" id="param_button"
                           class="btn btn-primary" title="Modifier"><ion-icon name="create"></ion-icon></a>
                        <a href="{{ path('Parametre.delete',{id : marque.idMarque,lib : 'Marque' }) }}" id="param_button"
                           class="btn btn-danger" title="Supprimer"><ion-icon name="trash"></ion-icon></a>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
