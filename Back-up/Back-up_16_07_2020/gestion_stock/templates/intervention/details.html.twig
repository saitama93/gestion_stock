{% block body %}
    <div class="well">
        <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
        <br>
        <br>
        <p>Date d'intervention : {{ intervention.dateIntervention }}</p>
        <p>Referent : {{ intervention.idReferent.nom }} {{ intervention.idReferent.prenom }}</p>

        <div class="table-responsive">
            <table class="table">
                <thead class="thead-dark">
                <tr><th>Numero de Serie</th><th>Nom du materiel</th><th>Marque</th>
                    <th>Type</th></tr>
                </thead>
                {% for materiel in materiels %}
                <tbody>
                <tr>
                    <td>{{ materiel.idMateriel.numeroSerie }}</td>
                    <td>{{ materiel.idMateriel.nomMateriel }}</td>
                    <td>{{ materiel.idMateriel.idMarque.libelleMarque|default('A définir') }}</td>
                    <td>{{ materiel.idMateriel.idType.libelleType|default('A définir') }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <a href="{{ path('Intervention.edit',{id: intervention.idIntervention}) }}" class="btn btn-link">Rajout de matériel</a>
        <a href="{{ path('Intervention.affectation',{id: intervention.idIntervention}) }}"
           class="btn btn-link">Affecter du matériel</a>
    </div>
{% endblock %}